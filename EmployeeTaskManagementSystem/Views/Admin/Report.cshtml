@model EmployeeTaskManagementSystem.Models.ViewModels.AdminReportViewModel

<div class="container mt-4">
    <h2 class="mb-4">Weekly Report</h2>

    @if (Model.WeeklyReport != null && Model.WeeklyReport.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Task ID</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Due Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model.WeeklyReport)
                    {
                        <tr>
                            <td>@task.EmployeeId</td>
                            <td>@task.Title</td>
                            <td>@task.Description</td>
                            <td>@task.DueDate.ToString("MM/dd/yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No weekly report data available.
        </div>
    }

    <hr class="my-4">

    <h2 class="mb-4">Monthly Report</h2>

    @if (Model.MonthlyReport != null && Model.MonthlyReport.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Task ID</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Due Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model.MonthlyReport)
                    {
                        <tr>
                            <td>@task.EmployeeId</td>
                            <td>@task.Title</td>
                            <td>@task.Description</td>
                            <td>@task.DueDate.ToString("MM/dd/yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No monthly report data available.
        </div>
    }
</div>
